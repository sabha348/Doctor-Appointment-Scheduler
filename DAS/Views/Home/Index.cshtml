@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f6f9;
            margin: 0;
            padding: 0;
        }

        .navbar {
            background-color: #343a40; 
            padding: 15px 20px;
        }

        .navbar-brand,
        .nav-link {
            color: #f8f9fa !important; 
            font-weight: 500;
            font-size: 1.1rem;
        }

        .nav-link:hover {
            text-decoration: none;
            color: #ffc107 !important; 
        }

        .hero {
            background-size: cover;
            background-position: center;
            padding: 100px 30px;
            border-radius: 10px;
            color: #fff;
            margin-top: 30px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
            position: relative;
        }

        .hero h1 {
            font-size: 3.5rem;
            font-weight: 700;
            color: #000;
        }

        .hero p {
            font-size: 1.4rem;
            margin-top: 15px;
            color: #000;
        }

        .btn-custom {
            background-color: #343a40;
            color: #fff;
            font-size: 1.2rem;
            padding: 10px 30px;
            border-radius: 50px;
            transition: all 0.3s;
            margin-top: 30px;
        }

        .btn-custom:hover {
            background-color: #ffc107;
            color: #343a40;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        }

        .footer {
            background-color: #343a40;
            color: #f8f9fa;
            padding: 20px 0;
            text-align: center;
            margin-top: 120px;
            position: relative;
        }

        .footer p {
            margin: 0;
            font-size: 1rem;
        }

        .hero .nav-link {
            color: #ffc107 !important;
            text-decoration: none;
            font-size: 1.2rem;
        }

        .hero .nav-link:hover {
            color: #fff !important;
        }

        
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="/">DAS</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Login">Admin</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Doctor" asp-action="Login">Doctor</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Patient" asp-action="Login">Patient</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <div class="hero text-center">
            <h1>Welcome to the Doctor Appointment Scheduler</h1>
            <p>Effortlessly manage appointments, doctors, and patients with our modern platform.</p>
        </div>
    </div>
    <div class="footer">
        <p>&copy; 2024 Doctor Appointment Scheduler. All rights reserved.</p>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
