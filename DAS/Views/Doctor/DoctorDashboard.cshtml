@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Doctor Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            transition: background-color 0.5s, color 0.5s;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 10px; 
        }

        .container-fluid {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start; 
            height: 100vh;
            text-align: center;
            padding-top: 20px; 
        }

        .header-text {
            margin-bottom: 20px;
            margin-top: 20px; 
        }

        .nav-options {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

            .nav-options .nav-link {
                font-size: 1.2rem;
                color: #343a40;
                padding: 10px 20px;
                display: flex;
                align-items: center;
                text-decoration: none;
                transition: background-color 0.3s, color 0.3s;
            }

                .nav-options .nav-link i {
                    margin-right: 8px;
                }

                .nav-options .nav-link:hover {
                    background-color: #007bff;
                    color: white;
                }

        body.dark-mode {
            background-color: #343a40;
            color: #f8f9fa;
        }

            body.dark-mode .nav-options .nav-link {
                color: #f8f9fa;
            }

                body.dark-mode .nav-options .nav-link:hover {
                    background-color: #007bff;
                    color: #ffffff;
                }

        .mode-toggle {
            position: fixed;
            top: 20px;
            right: 60px;
            background-color: transparent;
            border: none;
            font-size: 2rem;
            cursor: pointer;
            color: #343a40;
            transition: color 0.5s;
        }

        body.dark-mode .mode-toggle {
            color: #f8f9fa;
        }
    </style>
</head>
<body>

    <button class="mode-toggle" id="modeToggle" onclick="toggleDarkMode()">
        <i class="fas fa-moon"></i>
    </button>

    <div class="container-fluid">
        <div class="header-text">
            <h1>Welcome to Your Doctor Dashboard</h1>
            <p>Here you can manage your appointments and view your profile.</p>
        </div>

        <div class="nav-options">
            <a class="nav-link" asp-controller="Doctor" asp-action="MyAppointments">
                <i class="fas fa-calendar-check"></i> View Appointments
            </a>
            <a class="nav-link" asp-controller="Doctor" asp-action="ManageProfile">
                <i class="fas fa-user-cog"></i> Manage Profile
            </a>
            <a class="nav-link" asp-controller="Doctor" asp-action="Logout">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
        </div>
    </div>

    <script>
        function toggleDarkMode() {
            document.body.classList.toggle('dark-mode');

            const modeToggle = document.getElementById('modeToggle');
            const icon = modeToggle.querySelector('i');

            if (document.body.classList.contains('dark-mode')) {
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
            } else {
                icon.classList.remove('fa-sun');
                icon.classList.add('fa-moon');
            }
        }
    </script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
